<p id="notice"><%= notice %></p>

<h1>Calendars</h1>
<br>
<h1>New Calendar</h1>

<%= render 'form', calendar: @calendar %>
<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
        <div id="calendar"></div>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Special title treatment</h5>
            <% @calendars.each do |calendar| %>
              <p><%= calendar.event_name %> <%= link_to 'Show', calendar %> <%= link_to 'Edit', edit_calendar_path(calendar) %> <%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>